{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build SFML project",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/source-code/*.cpp",
                "-o",
                "${workspaceFolder}/build/program",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}/source-code"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger with added SFML libraries for specific source files."
        }
    ],
    "version": "2.0.0"
}
